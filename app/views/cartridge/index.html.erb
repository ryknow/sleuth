<% if @cartridges.length == 0 %>
  <h3>No search results found</h3>
<% end %>

<% @cartridges.each_with_index do |value, index| %>
  <% if (index + 1) % 2 != 0 %>
    <div class="row">
  <% end %>
    <div class="col-md-6">
      <% pngs = ["Create A Critter", "Ashlyns Alphabet", "Best Of Pixar", "Cricut Essentials"] %>
      <% if pngs.include? value[:name] %>
        <%= link_to image_tag(value[:name].gsub(" ", "") + '_FrontCover.PNG', class: "page-img"),
                    cartridge_path(value[:id]) %>
      <% else %>
        <%= link_to image_tag(value[:name].gsub(" ", "") + '_FrontCover.JPG', class: "page-img"),
                    cartridge_path(value[:id])%>
      <% end %>
    </div>
  <% if (index + 1) % 2 == 0 %>
    </div>
  <% end %>
<% end %>
